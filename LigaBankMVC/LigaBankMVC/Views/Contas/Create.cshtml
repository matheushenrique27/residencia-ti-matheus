@model LigaBankMVC.Models.Conta

@{
    ViewData["Title"] = "Conta";
    var _userId = TempData["UserId"];
}

<h4>Preencha seus dados:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <input asp-for="UsuarioId" value="@_userId" class="form-control" hidden/>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroDaAgencia" class="control-label"></label>
                <input asp-for="NumeroDaAgencia" value="1" class="form-control" hidden/>
                <span asp-validation-for="NumeroDaAgencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaldoDaConta" class="control-label"></label>
                <input asp-for="SaldoDaConta" value="0" class="form-control" hidden/>
                <span asp-validation-for="SaldoDaConta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar conta" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
